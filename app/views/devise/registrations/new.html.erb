<section class="bg-light p-3 p-md-4 p-xl-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
        <div class="card border border-light-subtle rounded-4">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <div class="row">
              <div class="col-12">
                <div class="mb-5">
                  <h2 class="h4 text-center">Sign up</h2>
                </div>
              </div>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="row gy-3 overflow-hidden">
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.text_field :first_name, required: true, class: "form-control" %>
                    <%= f.label :first_name, class: "form-label" %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.text_field :last_name, class: "form-control" %>
                    <%= f.label :last_name, class: "form-label" %>
                  </div>  
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control" %>
                    <%= f.label :email, class: "form-label" %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true, class: "form-control" %>
                    <%= f.label :password, class: "form-label" %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", required: true, class: "form-control" %>
                    <%= f.label :password_confirmation, class: "form-label" %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid">
                    <%= f.submit "Sign up", class: "btn bsb-btn-xl btn-primary" %>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="row">
              <div class="col-12">
                <hr class="mt-5 mb-4 border-secondary-subtle">
                <p class="m-0 text-secondary text-center">Already have an account? <%= link_to "Sign in", new_user_session_path, class: "link-primary text-decoration-none" %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render "devise/shared/links" %>
