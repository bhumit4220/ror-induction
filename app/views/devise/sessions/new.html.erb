<section class="bg-light p-3 p-md-4 p-xl-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
        <div class="card border border-light-subtle rounded-4">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <div class="row">
              <div class="col-12">
                <div class="mb-5">
                  <h2 class="h4 text-center">Sign in</h2>
                </div>
              </div>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'parsley-form', novalidate: true, data: { parsley_validate: true } }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="row gy-3 overflow-hidden">
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control", data: { parsley_type: 'email', parsley_type_message: 'Please enter a valid email address', parsley_required_message: 'Please enter your email', parsley_trigger: 'change keyup' } %>
                    <%= f.label :email, class: "form-label" %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true, class: "form-control", data: { parsley_required_message: 'Please enter your password', parsley_minlength: 6, parsley_minlength_message: 'Your password must be at least 6 characters', parsley_trigger: 'change keyup' } %>
                    <%= f.label :password, class: "form-label" %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid">
                    <%= f.submit "Sign in", class: "btn bsb-btn-xl btn-primary" %>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="row">
              <div class="col-12">
                <hr class="mt-5 mb-4 border-secondary-subtle">
                <p class="m-0 text-secondary text-center">Don't have an account? <%= link_to "Sign up", new_user_registration_path, class: "link-primary text-decoration-none" %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
