<% if @categories.present? %>  
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td>
        <% if can? :edit, category %>
          <%= link_to edit_category_path(category), class: "none-decoration" do %>
            <i class="fa-solid fa-pen-to-square color-primary"></i>
          <% end %> 
        <% end %>
        <% if can? :delete, category %> |        
          <%= link_to category_path(category), class: "none-decoration", method: :delete, data: { confirm: 'Are you sure, you want to delete this genres?' } do %>
            <i class="fa-solid fa-trash color-danger"></i>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
<% else %>
    <tr>
      <td class="text-center" colspan="5">No book found.</td>
    </tr>
<% end %>
