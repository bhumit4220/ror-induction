<h1 class="my-4 text-center">Books</h1>
<div class="container">
  <div class="text-right text-end mb-3">
    <% if can? :delete, Book %>
      <%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>
    <% end %>
  </div>

  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Author Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td class="d-flex">
            <%= book.name %>
            <% if book.image.attached? %>
              <div class="image-container">
                <%= image_tag book.image, class: "img-fluid ms-2", alt: book.name, height: 48, width: 48 %>
              </div>
            <% end %>
          </td>
          <td><%= book.author_name %></td>
          <td><%= truncate(book.description, length: 50) %></td>
          <td><%= book.category&.name || 'Uncategorized' %></td>
          <td>
            <%= link_to book_path(book) do %>
              <i class="fa-regular fa-eye color-view"></i>
            <% end %> 
            <% if can? :edit, book %>|
              <%= link_to edit_book_path(book) do %>
                <i class="fa-solid fa-pen-to-square color-primary"></i>
              <% end %> 
            <% end %>
            <% if can? :delete, book %>|        
              <%= link_to book_path(book), method: :delete, data: { confirm: 'Are you sure, you want to delete this book?' } do %>
                <i class="fa-solid fa-trash color-danger"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>
