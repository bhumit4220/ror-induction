<h1 class="my-4 text-center">Most Favorite Books</h1>
<div class="container">
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>No. of favorites</th>
      </tr>
    </thead>
    <tbody id="books-table-tbody">
      <% @favorite_books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.favorites_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>
<%= pie_chart  @favorite_books.map { |book| [book.name, book.favorites_count] } %>


