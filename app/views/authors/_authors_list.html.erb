<% if @authors.present? %>  
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td>
        <% if can? :edit, author %>
          <%= link_to edit_author_path(author), class: "none-decoration" do %>
            <i class="fa-solid fa-pen-to-square color-primary"></i>
          <% end %> 
        <% end %>
        <% if can? :delete, author %> |        
          <%= link_to author_path(author), class: "none-decoration", method: :delete, data: { confirm: 'Are you sure, you want to delete this author?' } do %>
            <i class="fa-solid fa-trash color-danger"></i>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
<% else %>
    <tr>
      <td class="text-center" colspan="5">No book found.</td>
    </tr>
<% end %>
